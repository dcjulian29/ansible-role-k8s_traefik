---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: dashboard
  namespace: traefikdashboard
  annotations:
    kubernetes.io/ingress.class: traefik-external
spec:
  entryPoints:
    - websecure
  routes:
    - kind: Rule
      match: "{{ 'Host(`{{ traefik_dashboard_fqdn }}`)' if traefik_dashboard_fqdn | length > 0 else 'PathPrefix(`/api`) || PathPrefix(`/dashboard`)' }}"
      middlewares:
        - name: dashboarddefault@kubernetescrd
      services:
        - name: api@internal
          kind: TraefikService
